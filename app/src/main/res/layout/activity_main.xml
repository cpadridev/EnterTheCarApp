<?xml version="1.0" encoding="utf-8"?>
<!-- EnterTheCar - Adrián Carmona Peña -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <!-- Name -->
        <LinearLayout
            style="@style/linearsCenter">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/name"
                android:textSize="18dp"/>

            <EditText
                style="@style/nameData"
                android:id="@+id/name"
                android:inputType="text"
                android:hint="@string/hint_name" />
        </LinearLayout>

        <!-- Surname -->
        <LinearLayout
            style="@style/linearsCenter">

            <TextView
                style="@style/textViews"
                android:text="@string/surnames"/>

            <EditText
                style="@style/nameData"
                android:id="@+id/surnames"
                android:inputType="text"
                android:hint="@string/hint_surname" />
        </LinearLayout>

        <!-- Vehicle type -->
        <LinearLayout
            style="@style/linearsCenter"
            android:layout_marginVertical="5dp">

            <TextView
                style="@style/textViews"
                android:text="@string/vehicle"/>

            <Spinner
                android:id="@+id/vehicles_spinner"
                style="@style/spinners" />
        </LinearLayout>

        <!-- Fuel type -->
        <LinearLayout
            style="@style/linearsCenter"
            android:layout_marginTop="5dp"
            android:id="@+id/fuelLayout"
            android:visibility="visible">

            <TextView
                style="@style/textViews"
                android:text="@string/fuel"/>

            <Spinner
                android:id="@+id/fuelSpinner"
                style="@style/spinners" />

            <Spinner
                android:id="@+id/noFuelSpinner"
                android:visibility="invisible"
                style="@style/spinners" />
        </LinearLayout>

        <!-- GPS -->
        <LinearLayout
            style="@style/linearsCenter">

            <TextView
                style="@style/textViews"
                android:text="@string/gps"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/ckxGps"
                android:hint="Sí" />
        </LinearLayout>

        <!-- Rent Days -->
        <LinearLayout
            style="@style/linearsCenter">

            <TextView
                style="@style/textViews"
                android:text="@string/rent_days"/>

            <LinearLayout
                style="@style/linearsCenter">

                <EditText
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:id="@+id/rentDays"
                    android:inputType="number"
                    android:gravity="center"
                    android:hint="000" />
            </LinearLayout>
        </LinearLayout>

        <!-- Prize -->
        <LinearLayout
            style="@style/linearsCenter">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/total_price"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/totalPrice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textAlignment="textEnd"
                android:text="0"
                android:textSize="20dp"
                tools:ignore="RtlCompat" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textAlignment="textStart"
                android:text=" €"
                android:textSize="20dp"
                tools:ignore="RtlCompat" />
        </LinearLayout>
    </LinearLayout>

    <!-- Rent Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/send"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:textSize="24dp"
            android:paddingHorizontal="50dp"
            android:paddingVertical="15dp"
            android:id="@+id/btnSend" />
    </LinearLayout>
</LinearLayout>